{
  "name": "tprt-site-switcher",
  "version": "1.0.2",
  "description": "Replaces the WordPress multisite My Sites dropdown with a searchable command palette",
  "main": "build/index.js",
  "scripts": {
    "build": "wp-scripts build",
    "start": "wp-scripts start",
    "lint:js": "eslint src/**/*.js",
    "lint:js:fix": "eslint src/**/*.js --fix",
    "bundle": "node scripts/bundleZip.js",
    "version:update": "node scripts/updatePluginVersion.js",
    "release": "bash scripts/create-release.sh",
    "release:patch": "bash scripts/create-release.sh patch",
    "release:minor": "bash scripts/create-release.sh minor",
    "release:major": "bash scripts/create-release.sh major",
    "release:zip": "bash scripts/create-release.sh --zip-only"
  },
  "keywords": [
    "wordpress",
    "multisite",
    "site-switcher",
    "command-palette"
  ],
  "author": "The Taproot Agency",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@stylistic/eslint-plugin": "^3.1.0",
    "@wordpress/scripts": "^26.19.0",
    "archiver": "^7.0.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0"
  },
  "dependencies": {
    "@wordpress/element": "^5.35.0",
    "@wordpress/i18n": "^4.58.0"
  }
}
